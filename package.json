{
  "name": "kafopticon",
  "version": "1.0.0",
  "description": "kafka surveillance",
  "main": "main/electron.js",
  "build": {
    "productName": "Kafopticon",
    "appId": "com.oslabs.kafopticon",
    "extraResources": [
      {
        "from": "./templates",
        "to": "templates",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "out/"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./assets/appIcon.icns"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!**/*.js.map",
      "!**/*.tsbuildinfo",
      "!**/tsconfig.json",
      "!**/tslint.json",
      "!**/*.spec.ts",
      "!**/*.test.ts",
      "!**/*.spec.tsx",
      "!**/*.test.tsx",
      "!**/*.scss",
      "!**/*.sass",
      "!**/*.md",
      "!build/",
      "!scripts/",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!**/._*",
      "!**/electron-builder.{yaml,yml,json,json5,toml}",
      "!**/{.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.DS_Store,ehthumbs.db,Desktop.ini}",
      "!**/{@eaDir,npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "scripts": {
    "test": "jest --verbose",
    "build": "webpack --config ./webpack.config.js --watch",
    "start": "concurrently \"npm run build\" \"electron main/electron.js\" --kill-others",
    "server": "nodemon main/expressServer.js",
    "bootZoo": "zookeeper-server-start.sh ./local-test/kafka-config/zookeeper.properties",
    "bootKaf1": "JMX_PORT=2020 kafka-server-start.sh ./local-test/kafka-config/server1.properties",
    "bootKaf2": "kafka-server-start.sh ./local-test/kafka-config/server2.properties",
    "bootKaf3": "kafka-server-start.sh ./local-test/kafka-config/server3.properties",
    "consume": "kafka-console-consumer.sh --bootstrap-server localhost:9092 --from-beginning --topic",
    "produce": "node ./local-test/producers-and-consumers/producer.js",
    "exportJmx": "java -jar local-test/jmx_prometheus_httpserver-0.19.0.jar 3030 ./local-test/scraping-config/jmxconfig.yml",
    "prometheus": "prometheus --config.file=./local-test/scraping-config/prometheus.yml",
    "electron-pack": "electron-builder build",
    "dist": "electron-builder -m"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oslabs-beta/KafOpticon.git"
  },
  "author": "Andrew Cirt, Ernesto Osorio, Joseph Paul, Zack Weiss",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oslabs-beta/KafOpticon/issues"
  },
  "homepage": "https://github.com/oslabs-beta/KafOpticon#readme",
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@types/jest": "^29.5.8",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.0.3",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "react-router": "^6.18.0",
    "react-router-dom": "^6.18.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dockerode": "^4.0.0",
    "electron-log": "^5.0.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "ini": "^4.1.1",
    "kafkajs": "^2.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
